<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context="br.ifpi.profabio.cardapiocapau.activity.ActivityCardapio"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="1dp"
        android:src="@drawable/img"
        android:layout_weight="3.29" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="5dp"
        android:layout_weight="3"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Prato Principal: "/>

    <TextView
        android:id="@+id/txt_principal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="5dp"
        android:textSize="18dp"
        android:layout_weight="6"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="5dp"
        android:layout_weight="3"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Sobremesa: "/>

    <TextView
        android:id="@+id/txt_sobremesa"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="5dp"
        android:textSize="18dp"
        android:layout_weight="6"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="5dp"
        android:layout_weight="3"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Informações Nutricionais: "/>

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="5dp"
        android:textSize="18dp"
        android:layout_weight="6"
        />
</LinearLayout>