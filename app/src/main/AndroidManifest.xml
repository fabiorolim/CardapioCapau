<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ifpi.profabio.cardapiocapau">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <activity android:name=".activity.ListCardapios" android:label="Cardapio CAPAU"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ActivityCardapio" android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.SobreActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.NovoCardapio" android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.Login" android:screenOrientation="portrait"></activity>

    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission."/>

</manifest>
